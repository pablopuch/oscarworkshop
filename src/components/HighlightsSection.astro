// src/components/HighlightsSection.astro
---

<section class="w-full flex flex-col items-center py-8">
    <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 w-full max-w-5xl"
    >
        <!-- UCI -->
        <div class="flex flex-col items-center text-center gap-2">
            <svg width="40" height="40" fill="none" viewBox="0 0 40 40"
                ><circle
                    cx="20"
                    cy="20"
                    r="18"
                    stroke="#554a8e"
                    stroke-width="3"></circle><text
                    x="50%"
                    y="55%"
                    text-anchor="middle"
                    fill="#554a8e"
                    font-size="14"
                    font-family="Arial"
                    dy=".3em">UCI</text
                ></svg
            >
            <span class="font-semibold">Mec√°nico Certificado UCI Nivel 2</span>
        </div>
        <!-- Shimano -->
        <div class="flex flex-col items-center text-center gap-2">
            <svg width="40" height="40" fill="none" viewBox="0 0 40 40"
                ><rect
                    x="4"
                    y="4"
                    width="32"
                    height="32"
                    rx="8"
                    stroke="#554a8e"
                    stroke-width="3"></rect><text
                    x="50%"
                    y="55%"
                    text-anchor="middle"
                    fill="#554a8e"
                    font-size="12"
                    font-family="Arial"
                    dy=".3em">SHIMANO</text
                ></svg
            >
            <span class="font-semibold">Certificado Shimano 2024</span>
        </div>
        <!-- Recogida a domicilio -->
        <div class="flex flex-col items-center text-center gap-2">
            <svg width="40" height="40" fill="none" viewBox="0 0 40 40"
                ><path d="M8 32V20h24v12" stroke="#554a8e" stroke-width="3"
                ></path><rect
                    x="12"
                    y="12"
                    width="16"
                    height="8"
                    rx="2"
                    stroke="#554a8e"
                    stroke-width="3"></rect><circle
                    cx="14"
                    cy="34"
                    r="2"
                    fill="#554a8e"></circle><circle
                    cx="26"
                    cy="34"
                    r="2"
                    fill="#554a8e"></circle></svg
            >
            <span class="font-semibold">Recogida a domicilio</span>
        </div>
        <!-- Asistencia integral -->
        <div class="flex flex-col items-center text-center gap-2">
            <svg width="40" height="40" fill="none" viewBox="0 0 40 40"
                ><circle
                    cx="20"
                    cy="20"
                    r="18"
                    stroke="#554a8e"
                    stroke-width="3"></circle><path
                    d="M20 10v10l7 7"
                    stroke="#554a8e"
                    stroke-width="3"></path></svg
            >
            <span class="font-semibold">Asistencia integral al ciclista</span>
        </div>
    </div>
</section>

