---
// src/components/ServicesSection.astro
---

<section class="w-full flex flex-col items-center py-12">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-8 text-[#554a8e]">
        Servicios
    </h2>
    <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 w-full max-w-6xl"
    >
        <!-- Ajustes y puestas a punto -->
        <div
            class="flex flex-col items-center bg-white rounded-lg shadow p-6 gap-4 border border-[#eee]"
        >
            <svg width="40" height="40" fill="none" viewBox="0 0 40 40"
                ><circle
                    cx="20"
                    cy="20"
                    r="18"
                    stroke="#554a8e"
                    stroke-width="3"></circle><path
                    d="M12 28l16-16M28 28l-16-16"
                    stroke="#554a8e"
                    stroke-width="2"></path></svg
            >
            <span class="font-semibold text-center"
                >Ajustes y puestas a punto</span
            >
        </div>
        <!-- Cambio de componentes -->
        <div
            class="flex flex-col items-center bg-white rounded-lg shadow p-6 gap-4 border border-[#eee]"
        >
            <svg width="40" height="40" fill="none" viewBox="0 0 40 40"
                ><rect
                    x="8"
                    y="8"
                    width="24"
                    height="24"
                    rx="6"
                    stroke="#554a8e"
                    stroke-width="3"></rect><path
                    d="M20 14v12M14 20h12"
                    stroke="#554a8e"
                    stroke-width="2"></path></svg
            >
            <span class="font-semibold text-center">Cambio de componentes</span>
        </div>
        <!-- Servicio completo -->
        <div
            class="flex flex-col items-center bg-white rounded-lg shadow p-6 gap-4 border border-[#eee]"
        >
            <svg width="40" height="40" fill="none" viewBox="0 0 40 40"
                ><circle
                    cx="20"
                    cy="20"
                    r="18"
                    stroke="#554a8e"
                    stroke-width="3"></circle><path
                    d="M20 10v20M10 20h20"
                    stroke="#554a8e"
                    stroke-width="2"></path></svg
            >
            <span class="font-semibold text-center">Servicio completo</span>
        </div>
        <!-- Recogida y entrega a domicilio -->
        <div
            class="flex flex-col items-center bg-white rounded-lg shadow p-6 gap-4 border border-[#eee]"
        >
            <svg width="40" height="40" fill="none" viewBox="0 0 40 40"
                ><rect
                    x="8"
                    y="16"
                    width="24"
                    height="12"
                    rx="4"
                    stroke="#554a8e"
                    stroke-width="3"></rect><circle
                    cx="14"
                    cy="32"
                    r="2"
                    fill="#554a8e"></circle><circle
                    cx="26"
                    cy="32"
                    r="2"
                    fill="#554a8e"></circle></svg
            >
            <span class="font-semibold text-center"
                >Recogida y entrega a domicilio</span
            >
        </div>
    </div>
    <div class="mt-8 flex flex-col items-center">
        <a href="/contacto" class="bs-btn"> Solicita tu presupuesto </a>
        <span class="text-xs text-gray-500 mt-2"
            >Precios orientativos bajo consulta</span
        >
    </div>
</section>

