---
const currentYear = new Date().getFullYear();
---

<footer class="footer-main">
  <div class="bs-container footer-grid">
    <!-- Columna de Información -->
    <div class="footer-column">
      <h3 class="footer-title">Oscar Workshop</h3>
      <p>C/ de la Precisión, 28, 08028 Barcelona</p>
      <p>
        <a href="tel:+34930123456">930 123 456</a> |
        <a href="mailto:contacto@oscarworkshop.bike"
          >contacto@oscarworkshop.bike</a
        >
      </p>
    </div>

    <!-- Columna de Horarios -->
    <div class="footer-column">
      <h3 class="footer-title">Horario</h3>
      <p>Lunes a Viernes: 9:00 - 19:00</p>
      <p>Sábados: 10:00 - 14:00</p>
    </div>

    <!-- Columna de Redes Sociales -->
    <div class="footer-column">
      <h3 class="footer-title">Síguenos</h3>
      <div class="social-icons">
        <a href="#" aria-label="Instagram" class="social-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path
              d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line
              x1="17.5"
              x2="17.51"
              y1="6.5"
              y2="6.5"></line></svg
          >
        </a>
        <a href="#" aria-label="Facebook" class="social-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
              d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
            ></path></svg
          >
        </a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {currentYear} Oscar Workshop. Todos los derechos reservados.</p>
  </div>
</footer>

<style>
  .footer-main {
    background-color: #f1f5f9; /* Un gris claro, como en el hero */
    color: #475569; /* Gris oscuro para el texto */
    padding: 4rem 0 2rem;
    border-top: 1px solid #e2e8f0;
    text-align: center; /* Centrar todo el contenido */
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
    text-align: center;
    justify-items: center; /* Centrar columnas */
  }

  @media (min-width: 768px) {
    .footer-grid {
      text-align: center; /* Mantener centrado en desktop */
      justify-items: center;
    }
  }

  .footer-column a {
    color: #554a8e; /* Color primario para enlaces */
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-column a:hover {
    color: #7c6fd6; /* Color secundario al pasar el ratón */
  }

  .footer-title {
    font-family: "Armageda", sans-serif;
    font-size: 2rem; /* Aumentar tamaño */
    font-weight: 700;
    color: #554a8e; /* Color primario */
    margin-bottom: 1rem;
    text-transform: uppercase;
    text-align: center;
  }

  .footer-column p {
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  .social-icons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .social-icons {
      justify-content: flex-start;
    }
  }

  .social-icon svg {
    color: #554a8e;
    transition:
      color 0.2s ease,
      transform 0.2s ease;
  }

  .social-icon:hover svg {
    color: #7c6fd6;
    transform: scale(1.1);
  }

  .footer-bottom {
    border-top: 1px solid #e2e8f0;
    padding-top: 2rem;
    text-align: center;
    font-size: 0.875rem;
    color: #64748b;
  }
</style>
