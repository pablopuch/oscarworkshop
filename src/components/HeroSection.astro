---
import Image from "astro/components/Image.astro";
import oscar_workshop3 from "../assets/theme-images/oscar_workshop3.jpg";

const { settings, title, content } = Astro.props;
---

<section class="bs-container py-6 flex flex-col lg:flex-row items-center">
  <div
    class="flex flex-col md:flex-row items-center justify-center gap-10 z-10 py-20 w-full max-w-5xl mx-auto"
  >
    <!-- Content -->
    <div class="flex flex-col gap-6 lg:max-w-lg w-full py-16">
      <!-- Title -->
      <h1 class="bs-h1" set:html={title} />

      <!-- Content -->
      <div
        class="bs-body-text xl:text-xl flex flex-col gap-4 [&_p]:last:text-bs-foreground-dark"
        set:html={content}
      />
    </div>

    <figure class="flex place-content-center -mt-20 lg:mt-0">
      <Image
        src={oscar_workshop3}
        format="avif"
        quality="high"
        alt="Taller Oscar Workshop"
        loading="eager"
      />
    </figure>
  </div>
</section>
