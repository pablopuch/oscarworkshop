---
import Image from "astro/components/Image.astro";
const heroBg = "/theme-images/oscar_workshop3.jpg";
---

<section
  class="relative w-full min-h-[60vh] flex items-center justify-center overflow-hidden"
>
  <!-- Imagen de fondo -->
  <div class="absolute inset-0 -z-10">
    <img
      src={heroBg}
      alt="Taller Oscar Workshop"
      class="w-full h-full object-cover object-center brightness-60 blur-[2px]"
      loading="eager"
    />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>
  <!-- Contenido centrado -->
  <div
    class="flex flex-col items-center justify-center gap-6 z-10 py-20 w-full"
  >

    <p
      class="text-lg md:text-2xl font-semibold text-white text-center drop-shadow"
    >
      Servicio de reparación de bicicletas – Mecánico Certificado UCI Nivel 2 y
      Shimano 2024
    </p>
    <a href="/contacto" class="bs-btn mt-4"> Reserva tu reparación </a>
  </div>
</section>
